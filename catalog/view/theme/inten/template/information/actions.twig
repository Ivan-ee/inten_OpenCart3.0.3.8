{{ header }}

<div class="actions mt-1">
    <h1 class="title">{{ name }}</h1>
    <div class="row">
        <div class="col-3">

        </div>
        <div class="col-9">
            {% for action in actions %}
                <div class="block d-flex mb-3">
                    <div class="block-image">
                        <img src="{{ action.block_image }}" alt="{{ action.name }}">
                    </div>
                    <div class="block-content">
                        <h2><a href="{{ action.href }}">{{ action.name }}</a></h2>
                        <p>{{ action.date }}</p>
                    </div>
                    <div class="block-product">
                        <div>
                            <img src="{{ action.product_thumb }}" alt="{{ action.product_name }}">
                            <h4>{{ action.product_name }}</h4>
                            <a href="{{ action.href }}">{{action.product_label}}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{{ footer }}