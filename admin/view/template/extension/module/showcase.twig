{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-showcase" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-showcase" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                            {% if error_name %}
                                <div class="text-danger">{{ error_name }}</div>
                            {% endif %}
                        </div>
                    </div>





                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-block-image">{{ entry_block_images }}</label>
                        <div class="col-sm-10">
                            {% for block_image in block_images %}
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <input type="text" name="block_images[]" value="{{ block_image }}" placeholder="{{ text_image_url }}" class="form-control" />
                                    </div>
                                    <div class="col-sm-6">
                                        <a onclick="$('#thumb-{{ loop.index }}').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i></a>
                                    </div>
                                </div>
                            {% endfor %}
                            <div id="image-row{{ block_images|length }}" class="form-group"></div>
                            <a onclick="addImage();" class="btn btn-primary">{{ text_add_image }}</a>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-block-image-upload">{{ entry_block_images_upload }}</label>
                        <div class="col-sm-10">
                            <input type="file" name="block_images[]" id="input-block-image-upload" class="form-control" />
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="status" id="input-status" class="form-control">
                                {% if status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
<script type="text/javascript">
    var image_row = {{ block_images|length }};

    function addImage() {
        html = '<div id="thumb-' + image_row + '" class="input-group" style="margin-top: 10px;">';
        html += '  <input type="text" name="block_images[]" value="" placeholder="{{ text_image_url }}" class="form-control" />';
        html += '  <span class="input-group-btn">';
        html += '    <a onclick="$(\'#thumb-' + image_row + '\').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i></a>';
        html += '  </span>';
        html += '</div>';

        $('#image-row' + image_row).html(html);

        image_row++;
    }
</script>
